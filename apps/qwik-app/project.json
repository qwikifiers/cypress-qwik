{
  "name": "qwik-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/qwik-app/src",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "options": {
        "outputPath": "dist/apps/qwik-app",
        "configFile": "apps/qwik-app/vite.config.ts"
      }
    },
    "build-ssr": {
      "executor": "@nrwl/vite:build",
      "defaultConfiguration": "preview",
      "options": {
        "outputPath": "dist/apps/qwik-app"
      },
      "configurations": {
        "preview": {
          "ssr": "src/entry.preview.tsx",
          "mode": "production"
        }
      },
      "dependsOn": ["build"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite preview",
        "cwd": "apps/qwik-app"
      },
      "dependsOn": ["build-ssr"]
    },
    "serve": {
      "executor": "@nrwl/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "qwik-app:build",
        "mode": "ssr"
      },
      "configurations": {
        "development": {
          "buildTarget": "qwik-app:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "qwik-app:build:production",
          "hmr": false
        }
      }
    },
    "serveDebug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --inspect-brk ../..//node_modules/vite/bin/vite.js --mode ssr --force",
        "cwd": "apps/qwik-app"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/qwik-app/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "component-test": {
      "executor": "@nrwl/cypress:cypress",
      "options": {
        "cypressConfig": "apps/qwik-app/cypress.config.ts",
        "testingType": "component"
      }
    }
  },
  "tags": []
}
